{
  "name": "@plusauth/plusauth-widget",
  "version": "0.30.0",
  "type": "module",
  "main": "dist/plusauth-widget.min.js",
  "module": "dist/plusauth-widget.esm.js",
  "browser": "dist/plusauth-widget.esm.js",
  "types": "dist/types/index.d.ts",
  "license": "MIT",
  "description": "Web widget for rendering PlusAuth views",
  "homepage": "https://github.com/PlusAuth/plusauth-widget#readme",
  "repository": "https://github.com/PlusAuth/plusauth-widget",
  "sideEffects": [
    "**/*.css"
  ],
  "author": {
    "email": "ismail.ayaz@ekinokssoftware.com",
    "name": "Ismail H. Ayaz"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "type-check": "vue-tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "dev": "cross-env NODE_ENV=development vite",
    "build": "rimraf dist && cross-env NODE_ENV=production vite build",
    "lint": "eslint . --quiet --fix",
    "release": "cross-env GITHUB_TOKEN=$GITHUB_TOKEN release-it",
    "storybook": "storybook dev --no-open -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@popperjs/core": "2.11.8",
    "@simplewebauthn/browser": "^10.0.0",
    "deepmerge": "4.3.1",
    "vue": "^3.4.27"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "storybook-addon-vue-mdx": "^0.1.5",
    "@release-it/conventional-changelog": "^8.0.1",
    "@storybook/addon-essentials": "^8.0.10",
    "@storybook/addon-interactions": "^8.0.10",
    "@storybook/addon-links": "^8.0.10",
    "@storybook/blocks": "^8.0.10",
    "@storybook/builder-vite": "^8.0.10",
    "@storybook/components": "^8.0.10",
    "@storybook/manager-api": "^8.0.10",
    "@storybook/test": "^8.0.10",
    "@storybook/theming": "^8.0.10",
    "@storybook/vue3": "^8.0.10",
    "@storybook/vue3-vite": "^8.0.10",
    "@stylistic/eslint-plugin": "^1.8.0",
    "@types/jest": "^29.5.12",
    "@types/lodash-es": "^4.17.12",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vue/compiler-sfc": "^3.4.27",
    "@vue/language-service": "^2.0.16",
    "@vue/shared": "^3.4.27",
    "@vue/test-utils": "^2.4.6",
    "@vue/vue3-jest": "^29.2.6",
    "autoprefixer": "^10.4.19",
    "core-js": "^3.37.0",
    "cross-env": "^7.0.3",
    "css-selector-tokenizer": "^0.8.0",
    "eslint": "^9.2.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-storybook": "^0.8.0",
    "eslint-plugin-unicorn": "^52.0.0",
    "eslint-plugin-vue": "^9.25.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.2",
    "lodash-es": "^4.17.21",
    "postcss": "^8.4.38",
    "postcss-import": "^16.1.0",
    "postcss-load-config": "^5.1.0",
    "postcss-replace": "^2.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "release-it": "^17.2.1",
    "rimraf": "^5.0.5",
    "standard-version": "^9.5.0",
    "storybook": "^8.0.10",
    "super-tiny-icons": "^0.6.0",
    "tailwindcss": "^3.4.3",
    "terser": "^5.31.0",
    "ts-jest": "^29.1.2",
    "tslib": "^2.6.2",
    "typescript": "5.4.5",
    "typescript-eslint": "^7.8.0",
    "vite": "^5.2.11",
    "vite-plugin-checker": "^0.6.4",
    "vite-plugin-dts": "^3.9.1",
    "vite-plugin-lib-inject-css": "^2.0.1",
    "vue-eslint-parser": "^9.4.2",
    "vue-tsc": "^2.0.16"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        0,
        "always",
        100
      ],
      "scope-case": [
        0
      ],
      "type-enum": [
        2,
        "always",
        [
          "a11y",
          "build",
          "chore",
          "ci",
          "dev",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "style",
          "test",
          "type"
        ]
      ]
    }
  },
  "lint-staged": {
    "*.js|*.vue|*.ts": "eslint --ext .js,.ts,.tsx,.vue --fix"
  },
  "engines": {
    "node": ">=16"
  },
  "browserslist": [
    "> 0.5%"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  }
}
