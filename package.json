    "sass": "^1.55.0",
    "standard-version": "^9.5.0",
    "super-tiny-icons": "^0.4.0",
    "ts-jest": "^27.1.5",
    "tslib": "^2.4.0",
    "typescript": "4.8.4",
    "vite": "^3.1.4"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        0,
        "always",
        100
      ],
      "scope-case": [
        0
      ],
      "type-enum": [
        2,
        "always",
        [
          "build",
          "chore",
          "ci",
          "dev",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "style",
          "test",
          "type"
        ]
      ]
    }
  },
  "lint-staged": {
    "*.js|*.vue|*.ts": "eslint --ext .js,.ts,.vue --fix"
  },
  "engines": {
    "node": ">=16"
  },
  "browserslist": [
    "> 0.5%"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  }
}
