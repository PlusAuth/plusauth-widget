{
  "name": "@plusauth/plusauth-widget",
  "version": "0.1.1",
  "main": "dist/plusauth-widget.cjs.js",
  "module": "dist/plusauth-widget.esm.js",
  "browser": "dist/plusauth-widget.min.js",
  "types": "dist/types/index.d.ts",
  "license": "MIT",
  "description": "Web widget for rendering PlusAuth views",
  "homepage": "https://github.com/PlusAuth/plusauth-widget#readme",
  "repository": "https://github.com/PlusAuth/plusauth-widget",
  "author": {
    "email": "ayazismailhakki@gmail.com",
    "name": "Ismail H. Ayaz"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "dev": "cross-env NODE_ENV=development rollup -cw",
    "build": "rimraf dist && cross-env NODE_ENV=production rollup -c",
    "lint": "eslint . --ext .js,.ts,.vue --fix",
    "prepublishOnly": "yarn lint && yarn build",
    "release": "cross-env GITHUB_TOKEN=$GITHUB_TOKEN release-it"
  },
  "dependencies": {
    "@plusauth/web": "^0.0.4",
    "core-js": "^3.6.5",
    "deepmerge": "^4.2.2",
    "vue": "^3.0.1",
    "vue-router": "^4.0.0-beta.13"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@fullhuman/postcss-purgecss": "^3.0.0",
    "@release-it/conventional-changelog": "^2.0.0",
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-babel": "^5.2.1",
    "@rollup/plugin-commonjs": "^15.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@types/jest": "^26.0.15",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "@vue/compiler-sfc": "^3.0.1",
    "@vue/test-utils": "^2.0.0-beta.7",
    "autoprefixer": "^10.0.1",
    "cross-env": "^7.0.2",
    "eslint": "^7.11.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-vue": "^7.1.0",
    "husky": "^4.3.0",
    "jest": "^26.6.0",
    "jsdom": "^16.4.0",
    "lint-staged": "^10.4.2",
    "postcss-prefixer": "^2.1.2",
    "release-it": "^14.2.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.32.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-postcss": "^3.1.8",
    "rollup-plugin-serve": "^1.0.4",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.28.0",
    "rollup-plugin-vue": "^6.0.0-beta.10",
    "sass": "^1.27.0",
    "standard-version": "^9.0.0",
    "ts-jest": "^26.4.1",
    "tslib": "^2.0.3",
    "typescript": "4.0.3",
    "vue-jest": "^5.0.0-alpha.5"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        0,
        "always",
        100
      ],
      "scope-case": [
        0
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "browserslist": [
    "> 0.5%"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  }
}
