{
  "name": "@plusauth/plusauth-widget",
  "version": "0.21.0",
  "type": "module",
  "main": "dist/plusauth-widget.min.js",
  "module": "dist/plusauth-widget.esm.js",
  "browser": "dist/plusauth-widget.esm.js",
  "types": "dist/types/index.d.ts",
  "license": "MIT",
  "description": "Web widget for rendering PlusAuth views",
  "homepage": "https://github.com/PlusAuth/plusauth-widget#readme",
  "repository": "https://github.com/PlusAuth/plusauth-widget",
  "sideEffects": [
    "**/*.css"
  ],
  "author": {
    "email": "ayazismailhakki@gmail.com",
    "name": "Ismail H. Ayaz"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "dev": "cross-env NODE_ENV=development vite",
    "build": "rimraf dist && cross-env NODE_ENV=production vite build",
    "lint": "eslint . --ext .js,.ts,.vue --fix",
    "release": "cross-env GITHUB_TOKEN=$GITHUB_TOKEN release-it"
  },
  "dependencies": {
    "@popperjs/core": "2.11.8",
    "@simplewebauthn/browser": "^8.3.4",
    "deepmerge": "4.3.1",
    "vue": "3.3.13",
    "vue-router": "4.2.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@release-it/conventional-changelog": "^8.0.1",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-vue": "^4.5.2",
    "@vue/compiler-sfc": "^3.3.13",
    "@vue/language-service": "^1.8.26",
    "@vue/shared": "^3.3.13",
    "@vue/test-utils": "^2.4.3",
    "@vue/vue3-jest": "^29.2.6",
    "@vuedx/typecheck": "^0.7.6",
    "@vuedx/typescript-plugin-vue": "^0.7.6",
    "autoprefixer": "^10.4.16",
    "core-js": "^3.34.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-vue": "^9.19.2",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jsdom": "^23.0.1",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.32",
    "postcss-load-config": "^5.0.2",
    "postcss-prefixer": "^3.0.0",
    "postcss-replace": "^2.0.1",
    "release-it": "^17.0.1",
    "rimraf": "^5.0.5",
    "standard-version": "^9.5.0",
    "super-tiny-icons": "^0.6.0",
    "tailwindcss": "^3.4.0",
    "terser": "^5.26.0",
    "ts-jest": "^29.1.1",
    "tslib": "^2.6.2",
    "typescript": "5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-dts": "^3.6.4",
    "vite-plugin-lib-inject-css": "^1.3.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        0,
        "always",
        100
      ],
      "scope-case": [
        0
      ],
      "type-enum": [
        2,
        "always",
        [
          "build",
          "chore",
          "ci",
          "dev",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "style",
          "test",
          "type"
        ]
      ]
    }
  },
  "lint-staged": {
    "*.js|*.vue|*.ts": "eslint --ext .js,.ts,.vue --fix"
  },
  "engines": {
    "node": ">=16"
  },
  "browserslist": [
    "> 0.5%"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  }
}
