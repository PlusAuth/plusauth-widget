{
  "name": "@plusauth/plusauth-widget",
  "version": "0.17.0",
  "main": "dist/plusauth-widget.cjs.js",
  "module": "dist/plusauth-widget.esm.js",
  "browser": "dist/plusauth-widget.min.js",
  "types": "dist/types/index.d.ts",
  "license": "MIT",
  "description": "Web widget for rendering PlusAuth views",
  "homepage": "https://github.com/PlusAuth/plusauth-widget#readme",
  "repository": "https://github.com/PlusAuth/plusauth-widget",
  "author": {
    "email": "ayazismailhakki@gmail.com",
    "name": "Ismail H. Ayaz"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "dev": "cross-env NODE_ENV=development vite",
    "build": "rimraf dist && cross-env NODE_ENV=production rollup -c",
    "lint": "eslint . --ext .js,.ts,.vue --fix",
    "prepublishOnly": "npm run lint && npm run build",
    "release": "cross-env GITHUB_TOKEN=$GITHUB_TOKEN release-it"
  },
  "dependencies": {
    "@plusauth/web": "^0.3.0-beta.2",
    "@popperjs/core": "^2.11.0",
    "deepmerge": "^4.2.2",
    "vue": "^3.2.26",
    "vue-router": "^4.0.12"
  },
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@babel/plugin-proposal-class-properties": "^7.16.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@babel/preset-typescript": "^7.16.5",
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@fullhuman/postcss-purgecss": "^4.1.3",
    "@release-it/conventional-changelog": "^3.3.0",
    "@rollup/plugin-alias": "^3.1.8",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.1",
    "@rollup/plugin-replace": "^3.0.0",
    "@types/jest": "^27.0.3",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "@vitejs/plugin-vue": "^2.0.1",
    "@vue/compiler-sfc": "^3.2.26",
    "@vue/test-utils": "^2.0.0-rc.18",
    "@vue/vue3-jest": "^27.0.0-alpha.4",
    "@vuedx/typecheck": "^0.7.4",
    "@vuedx/typescript-plugin-vue": "^0.7.4",
    "autoprefixer": "^10.4.0",
    "core-js": "^3.20.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-vue": "^8.2.0",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "jsdom": "^19.0.0",
    "lint-staged": "^12.1.3",
    "postcss": "^8.4.5",
    "postcss-nested": "^5.0.6",
    "postcss-prefixer": "^2.1.3",
    "release-it": "^14.11.8",
    "rimraf": "^3.0.2",
    "rollup": "^2.61.1",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.1",
    "rollup-plugin-vue": "6.0.0",
    "sass": "^1.45.1",
    "standard-version": "^9.3.2",
    "super-tiny-icons": "^0.4.0",
    "ts-jest": "^27.1.2",
    "tslib": "^2.3.1",
    "typescript": "4.5.4",
    "vite": "^2.7.6"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        0,
        "always",
        100
      ],
      "scope-case": [
        0
      ],
      "type-enum": [
        2,
        "always",
        [
          "build",
          "chore",
          "ci",
          "dev",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "style",
          "test",
          "type"
        ]
      ]
    }
  },
  "lint-staged": {
    "*.js|*.vue|*.ts": "eslint --ext .js,.ts,.vue --fix"
  },
  "engines": {
    "node": ">=16"
  },
  "browserslist": [
    "> 0.5%"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  }
}
