{
  "name": "plusauth-widget",
  "version": "0.0.1-alpha.0",
  "main": "dist/plusauth-widget.cjs.js",
  "module": "dist/plusauth-widget.esm.js",
  "browser": "dist/plusauth-widget.min.js",
  "types": "dist/types/index.d.ts",
  "license": "MIT",
  "description": "Web widget for rendering PlusAuth views",
  "homepage": "https://github.com/PlusAuth/plusauth-widget#readme",
  "repository": "https://github.com/PlusAuth/plusauth-widget",
  "author": {
    "email": "ayazismailhakki@gmail.com",
    "name": "Ismail H. Ayaz"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build": "rimraf dist && cross-env NODE_ENV=production rollup -c",
    "lint": "eslint . --ext .js,.ts,.vue --fix",
    "prepublishOnly": "yarn lint && yarn build",
    "release": "cross-env GITHUB_TOKEN=$GITHUB_TOKEN release-it"
  },
  "dependencies": {
    "core-js": "3",
    "deepmerge": "^4.2.2",
    "plusauth-web": "^0.0.2-alpha.1",
    "vue": "^3.0.0-beta.14",
    "vue-router": "^4.0.0-alpha.12"
  },
  "devDependencies": {
    "@babel/core": "7.10.0",
    "@babel/plugin-proposal-class-properties": "7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "7.10.0",
    "@babel/preset-env": "^7.10.0",
    "@babel/preset-typescript": "7.9.0",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@release-it/conventional-changelog": "^1.1.4",
    "@rollup/plugin-alias": "^3.1.0",
    "@rollup/plugin-babel": "^5.0.2",
    "@rollup/plugin-commonjs": "^12.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^3.0.1",
    "@typescript-eslint/parser": "^3.0.1",
    "@vue/compiler-sfc": "^3.0.0-beta.14",
    "autoprefixer": "^9.8.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.1.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-vue": "^7.0.0-alpha.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.6",
    "release-it": "^13.6.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.10.9",
    "rollup-plugin-postcss": "^3.1.1",
    "rollup-plugin-terser": "^6.1.0",
    "rollup-plugin-typescript2": "^0.27.1",
    "rollup-plugin-vue": "^6.0.0-beta.1",
    "sass": "^1.26.5",
    "standard-version": "^8.0.0",
    "tslib": "^2.0.0",
    "typescript": "3.8.3"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        0,
        "always",
        100
      ],
      "scope-case": [
        0
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "browserslist": ["> 0.25%, not dead"],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
