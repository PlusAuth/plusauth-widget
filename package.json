{
  "name": "@plusauth/plusauth-widget",
  "version": "0.19.0-alpha.0",
  "type": "module",
  "main": "dist/plusauth-widget.min.js",
  "module": "dist/plusauth-widget.esm.js",
  "browser": "dist/plusauth-widget.esm.js",
  "types": "dist/types/index.d.ts",
  "license": "MIT",
  "description": "Web widget for rendering PlusAuth views",
  "homepage": "https://github.com/PlusAuth/plusauth-widget#readme",
  "repository": "https://github.com/PlusAuth/plusauth-widget",
  "sideEffects": [
    "**/*.css"
  ],
  "author": {
    "email": "ayazismailhakki@gmail.com",
    "name": "Ismail H. Ayaz"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "dev": "cross-env NODE_ENV=development vite",
    "build": "rimraf dist && cross-env NODE_ENV=production vite build",
    "lint": "eslint . --ext .js,.ts,.vue --fix",
    "release": "cross-env GITHUB_TOKEN=$GITHUB_TOKEN release-it"
  },
  "dependencies": {
    "@plusauth/web": "0.4.2",
    "@popperjs/core": "2.11.8",
    "deepmerge": "4.3.1",
    "vue": "3.3.4",
    "vue-router": "4.2.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "@release-it/conventional-changelog": "^7.0.1",
    "@types/jest": "^29.5.4",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "@vitejs/plugin-vue": "^4.3.4",
    "@vue/compiler-sfc": "^3.3.4",
    "@vue/test-utils": "^2.4.1",
    "@vue/vue3-jest": "^29.2.6",
    "@vuedx/typecheck": "^0.7.6",
    "@vuedx/typescript-plugin-vue": "^0.7.6",
    "autoprefixer": "^10.4.15",
    "core-js": "^3.32.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.48.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-vue": "^9.17.0",
    "husky": "^8.0.3",
    "jest": "^29.6.4",
    "jsdom": "^22.1.0",
    "lint-staged": "^14.0.1",
    "postcss": "^8.4.29",
    "postcss-nested": "^6.0.1",
    "postcss-prefixer": "^3.0.0",
    "release-it": "^16.1.5",
    "rimraf": "^5.0.1",
    "sass": "^1.66.1",
    "standard-version": "^9.5.0",
    "super-tiny-icons": "^0.5.0",
    "terser": "^5.19.4",
    "ts-jest": "^29.1.1",
    "tslib": "^2.6.2",
    "typescript": "5.2.2",
    "vite": "^4.4.9",
    "vite-plugin-dts": "^3.5.3",
    "vite-plugin-lib-inject-css": "^1.2.1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        0,
        "always",
        100
      ],
      "scope-case": [
        0
      ],
      "type-enum": [
        2,
        "always",
        [
          "build",
          "chore",
          "ci",
          "dev",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "style",
          "test",
          "type"
        ]
      ]
    }
  },
  "lint-staged": {
    "*.js|*.vue|*.ts": "eslint --ext .js,.ts,.vue --fix"
  },
  "engines": {
    "node": ">=16"
  },
  "browserslist": [
    "> 0.5%"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  }
}
