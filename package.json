    "@vuedx/typecheck": "^0.7.5",
    "@vuedx/typescript-plugin-vue": "^0.7.5",
    "autoprefixer": "^10.4.12",
    "core-js": "^3.25.4",
    "cross-env": "^7.0.3",
    "eslint": "^8.24.0",
